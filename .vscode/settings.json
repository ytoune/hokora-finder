      "source.fixAll.biome": "always"
    }
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.biome": "always"
    }
  },
  "cSpell.words": ["hokora"]
}
